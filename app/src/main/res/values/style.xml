<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowAnimationStyle">@style/FadeAnimation</item>
    </style>

    <style name="FadeAnimation">
        <item
            name="android:windowEnterAnimation">@android:anim/fade_in
        </item>
        <item name="android:windowExitAnimation">@android:anim/fade_out
        </item>
    </style>
    <style name="textos">
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/purple_700</item>
    </style>
</resources>